@using TradeDash.DTO
@model TradeDash.FrontEnd.ViewModels.Strategy.StrategyViewModel

@{

    ViewBag.Title = "title";
    Layout = "_Layout";
}

@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "Exemplo1",
        Value = "Exemplo1"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Exemplo2",
        Value = "Exemplo2",
        Selected = true
    });
    listItems.Add(new SelectListItem
    {
        Text = "Exemplo3",
        Value = "Exemplo3"
    });
}

<main role="main" class="col-md-11 ml-sm-auto col-lg-11 px-4">
    <h2>Strategy Form</h2>
    @using (Html.BeginForm("Save", "Strategy"))
    {
        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StrategyType" class="control-label"></label>
                    <select asp-for="StrategyType"
                            class="form-control"
                            asp-items="@(new SelectList(@listItems, "Value", "Text"))">
                    </select>
                    <span asp-validation-for="StrategyType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary">Create</button>
                </div>
            </div>
        </div>
    }
</main>

