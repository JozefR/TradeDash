@model List<TradeDash.FrontEnd.ViewModels.Stock.StockViewModel>

@{
    Layout = "_Layout";
}

<main role="main" class="col-md-11 ml-sm-auto col-lg-11 px-4">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-8">
                            <h4 style="text-align: center">Exercised long stocks</h4>
                            <table class="table table-striped table-sm table-bordered" id="stockTable">
                                <thead>
                                <tr>
                                    <th>Number</th>
                                    <th>Ticker</th>
                                    <th>Date</th>
                                    <th>Volume</th>
                                    <th>Change Percent</th>
                                    <th>Close Price</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var stock in @Model)
                                {
                                    <tr>
                                        <td>@stock.Number</td>
                                        <td>@stock.Ticker</td>
                                        <td>@stock.Date</td>
                                        <td>@stock.Volume</td>
                                        <td>@stock.ChangePercent</td>
                                        <td>@stock.ClosePrice</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function() {
            $('#stockTable').DataTable({
                "paging": false
            });
        });
    </script>
}