@using TradeDash.FrontEnd.Controllers
@model List<TradeDash.FrontEnd.ViewModels.Stock.StockViewModel>

@{
    Layout = "_Layout";
}

<main role="main" class="col-md-11 ml-sm-auto col-lg-11 px-4">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-12">
                    <div class="row" id="stocks">
                        <div class="col-8">
                            <h4 style="text-align: center">Stock Data</h4>
                            <div class="row">
                                <div class="col-4">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Ticker</span>
                                            <input class="ticker-input" type="text" aria-label="Ticker" class="form-control">
                                            <span class="input-group-text">History</span>
                                            <input class="history-input" type="text" aria-label="History" class="form-control">
                                            <button class="btn btn-success btn-sm js-find">Find</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-striped table-sm table-bordered" id="stockTable">
                                        <thead>
                                        <tr>
                                            <th>Number</th>
                                            <th>Ticker</th>
                                            <th>Date</th>
                                            <th>Volume</th>
                                            <th>Change Percent</th>
                                            <th>Close Price</th>
                                            <th>Long SMA</th>
                                            <th>Short SMA</th>
                                            <th>RSI</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var stock in @Model)
                                        {
                                            <tr>
                                                <td>@stock.Number</td>
                                                <td>@stock.Ticker</td>
                                                <td>@stock.Date</td>
                                                <td>@stock.Volume</td>
                                                <td>@stock.ChangePercent</td>
                                                <td>@stock.ClosePrice</td>
                                                <td>@stock.LongSMA</td>
                                                <td>@stock.ShortSMA</td>
                                                <td>@stock.RSI</td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function() {
            $('#stockTable').DataTable({
                "dom": '<"top">rt<"bottom"ip><"clear">'
            });

            $("#stocks").on("click",
                ".js-find",
                function() {
                    var ticker = $(".ticker-input").val();
                    var history = $(".history-input").val();
                    if (confirm("Do you want to try find this stock?")) {
                        window.location = `/stock/find/?ticker=${ticker}&history=${history}`;
                    }
                });
        });
    </script>
}